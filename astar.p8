msize=16

function get_tile(id)
 for x=0,msize-1 do
  for y=0,msize-1 do
   if mget(x,y)==id then
    return {x,y}
   end
  end
 end
 printh("could not find tile")
end

function vec_idx(vec)
 return map_idx(vec[1],vec[2])
end

function map_idx(x,y)
 return ((x+1)*msize)+y
end

function popend(t)
 local res=t[#t]
 del(t,res)
 return res
end

function insert(t,val)
 for i=(#t+1),2,-1 do
  t[i]=t[i-1]
 end
 t[1]=val
end

function reverse(t)
 for i=1,(#t/2) do
  local tmp=t[i]
  local idx=#t-(i-1)
  t[i]=t[idx]
  t[idx]=tmp
 end
end
